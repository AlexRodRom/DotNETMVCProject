@model IEnumerable<DotNETMVCProject.Models.Product>


@{
    var menu = Session["cart"] as IEnumerable<DotNETMVCProject.Models.Product>;
    if (menu != null)
    {
        foreach (var item in menu)
        {
            <div class="col-12 col-lg-12 tradeButton">
                <div class="divCartItem">
                    <div class="col-lg-12 col-8">
                        <img src="@Html.DisplayFor(modelItem => item.UrlImage)" alt="@Html.DisplayFor(modelItem => item.Name)" onclick="location.href='@Url.Action("About", "Home")';return false;" width="135" height="135">
                        <span [ngClass]="col-lg-12 col-12">@Html.DisplayFor(modelItem => item.Name)</span>
                        <div *ngIf="!changePrice" class="row mt-1">
                            <span class="col-lg-6 col-6">@Html.DisplayFor(modelItem => item.Price)</span>
                        </div>
                    </div>
                </div>
            </div>
            }
        }
    }

